<div class="jumbotron jumbotron-fluid">
    <div class="container burgerTron">
        <h1 class="text-center" id="mainHeader">Eat Da Burger!</h1>
        <img src="./assets/images/burgerStill.jpg" class="float-right" id="burgerImg" alt="rotating burger">
        <h3 class="mt-4">Find all the burgers!</h3>
        <h3 class="m-5">Eat all the burgers!</h3>
        <p id="burgerStatement">Find a burger you want to eat and add it to the list.</p>
        <div class="input-group createBurger">
            <input type="text" class="form-control" id="burger" placeholder="Add Burger Here">
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary" id="addBurger">Add Burger!</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row d-flex justify-content-center">

        <div class="col-sm burgersList">
            <h2 class="text-center">Burgers to Try!</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <span class="burgerName align-middle">{{this.id}} - {{this.burger_name}}</span>
                    <button type="button" class="btn btn-warning eatBurger float-right" data-id="{{this.id}}">Eat Me!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm burgersList">
            <h2 class="text-center">Burgers Destroyed!</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <span class="burgerName align-middle">{{this.id}} - {{this.burger_name}}</span>
                    <button type="button" class="btn btn-danger deleteBurger float-right" data-id="{{this.id}}">Delete</button>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 d-flex justify-content-center">
            <img src="./assets/images/burger.gif" class="img-fluid mx-auto" alt="SLJ eating Burger">
        </div>
    </div>
</div>
<div class="jumbotron">
    <h1 class="display-4">Eat Da Burger!</h1>
    <p class="lead">Find all the burgers! Eat all the burgers!</p>
    <hr class="my-4">
    <p>Find a burger you want to eat and add it to the list.</p>
    <div class="form-group">
        <input type="text" class="form-control" id"newBurger" placeholder="Add Burger Here">
        <button type="submit" class="btn btn-primary" id="addBurger">Add Burger!</button>
    </div>
</div>

<div class="row">

    <div class="col-md-6">
        <h2>Burgers to Try!</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <p>{{this.id}} - {{this.burger_name}}</p>
                    <button type="button" class="eatBurger btn btn-warning" id="eatButton" data-id="{{this.id}}">Eat Me!</button>
                {{/if}}
            {{/each}}    
        </ul>
    </div>

    <div class="col-md-6">
        <h2>Burgers Destroyed!</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    <p>{{this.id}} - {{this.burger_name}}</p>
                    <button type="button" class="deleteBurger btn btn-danger" id="deleteButton" data-id="{this.id}}">Delete</button>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

</div>
<div class="row">
    <div class="col-md-12">
        <img src"./assets/images/burger.gif" alt="SLJ eating Burger">
    </div>
</div>
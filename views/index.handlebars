<div class="jumbotron">
    <h1>Eat Da Burger!</h1>
    <h3>Find all the burgers! Eat all the burgers!</h3>
    <p>Find a burger you want to eat and add it to the list.</p>
    <div class="input-group createBurger">
        <input type="text" class="form-control" id="burger" placeholder="Add Burger Here">
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary" id="addBurger">Add Burger!</button>
        </div>
    </div>
</div>

<div class="row d-flex justify-content-center">

    <div class="col-md-6">
        <h2>Burgers to Try!</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                <span class="burgerName">{{this.id}} - {{this.burger_name}}</span>
                <button type="button" class="btn btn-warning eatBurger" data-id="{{this.id}}" >Eat Me!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-md-6">
        <h2>Burgers Destroyed!</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                <span class="burgerName">{{this.id}} - {{this.burger_name}}</span>
                <button type="button" class="btn btn-danger deleteBurger" data-id="{{this.id}}" >Delete</button>
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>

</div>
<div class="row">
    <div class="col-md-12 d-flex justify-content-center">
        <img src="./assets/images/burger.gif" class="img-fluid mx-auto" alt="SLJ eating Burger">
    </div>
</div>